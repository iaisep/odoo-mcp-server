# Odoo Configuration
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database_name
ODOO_USERNAME=your_username@domain.com
ODOO_PASSWORD=your_password
ODOO_API_KEY=optional_api_key_if_supported
ODOO_ACCOUNTING_ENABLED=true
ODOO_DEFAULT_DATE_RANGE=90

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI Configuration (alternative LLM)
OPENAI_API_KEY=your_openai_api_key_here

# MCP Configuration
MCP_SERVER_NAME=odoo-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=MCP Server para Odoo CRM/Partner con integración Anthropic
MCP_SERVER_URL=https://your-mcp-server.com

# LLM Model Configuration
LLM_MODEL=anthropic:claude-3-sonnet-20240229

# Server Configuration
HOST=0.0.0.0
PORT=8083
DEBUG=false

# Development Mode (para testing sin conexión real)
DEV_MODE=false
MOCK_ODOO_DATA=false

# Coolify Configuration (opcional)
COOLIFY_BRANCH=main
COOLIFY_CONTAINER_NAME=your_container_name
COOLIFY_FQDN=your-domain.com
COOLIFY_RESOURCE_UUID=your_resource_uuid
COOLIFY_URL=https://your-deployment-url.com

# Logging
LOG_LEVEL=INFO
